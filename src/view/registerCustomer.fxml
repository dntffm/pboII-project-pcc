<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="474.0" prefWidth="450.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterCustomerController">
   <children>
      <VBox layoutX="129.0" prefHeight="397.0" prefWidth="192.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="194.0" text="Register">
               <VBox.margin>
                  <Insets top="12.0" />
               </VBox.margin>
               <font>
                  <Font size="24.0" />
               </font>
               <padding>
                  <Insets bottom="12.0" />
               </padding>
            </Label>
            <Label layoutX="10.0" layoutY="37.0" text="Nama Lengkap">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <TextField fx:id="fieldNamaLengkap" layoutX="10.0" layoutY="55.0" prefHeight="35.0" prefWidth="192.0" promptText="Nama Lengkap" styleClass="input-area" stylesheets="@../assets/css/style.css">
