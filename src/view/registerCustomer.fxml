                  <Insets top="16.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#handleClick" prefHeight="26.0" prefWidth="192.0" stylesheets="@../assets/css/style.css" text="Kembali Ke Login">
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <HBox prefHeight="35.0" prefWidth="71.0">
         <children>
            <Button fx:id="btnClose" mnemonicParsing="false" onAction="#handleClick" styleClass="close-button" stylesheets="@../assets/css/style.css" text="X">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets left="4.0" top="4.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" styleClass="minimize-button" stylesheets="@../assets/css/style.css" text="_">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets left="4.0" top="4.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
