                  <Insets bottom="4.0" />
               </VBox.margin></TextField>
            <Label layoutX="10.0" layoutY="80.0" text="Username">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <TextField fx:id="fieldUserName" layoutX="10.0" layoutY="98.0" prefHeight="35.0" prefWidth="192.0" promptText="Username" styleClass="input-area" stylesheets="@../assets/css/style.css">
               <VBox.margin>
                  <Insets bottom="4.0" />
               </VBox.margin></TextField>
            <Label layoutX="10.0" layoutY="124.0" text="Password">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <PasswordField fx:id="fieldPasswd" prefHeight="35.0" prefWidth="192.0" promptText="Password" styleClass="input-area" stylesheets="@../assets/css/style.css">
