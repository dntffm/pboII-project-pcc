                  <Insets bottom="4.0" />
               </VBox.margin></PasswordField>
            <Label layoutX="10.0" layoutY="167.0" text="Konfirmasi Password">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
